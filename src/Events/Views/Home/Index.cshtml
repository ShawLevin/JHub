@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="https://www.jewishphilly.org/sites/default/files/styles/banner/public/images/pages/ren_0.jpg?itok=3UiLG884" alt="ASP.NET" class="img-responsive" style="margin:auto;max-height:300px" />
            <div class="carousel-caption" role="option">
                <p>
                    Federation's Young Professional Shabbat in the City!
                    <a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/jevs.jpg" alt="Visual Studio" class="img-responsive" style="margin:auto;max-height:200px" />
            <div class="carousel-caption" role="option">
                <p>
                    Organization Highlight: JEVS
                    <a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkID=525030&clcid=0x409">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="https://scontent-ord1-1.xx.fbcdn.net/v/t1.0-9/16864326_1279704428762119_6044076917256831604_n.jpg?oh=04eef3f59a3ecaee378b6b6fc06cf456&oe=5944E986" alt="Package Management" class="img-responsive" style="margin:auto;max-height:300px" />
            <div class="carousel-caption" role="option">
                <p>
                    Action of the Week!
                    <a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkID=525029&clcid=0x409">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-2">
        <h2>Events</h2>
        Check out our curated and categorized list of Philly events.
    </div>
    <div class="col-md-3">
        <h2>Organizations</h2>
        Find your niche! Young professional? Religious leader? New family? Political? Pilates? We got you. 
    </div>
    <div class="col-md-2">
        <h2>Volunteering</h2>
        Volunteer opportunities for every level of time commitment, physical ability and interest!
    </div>
    <div class="col-md-2">
        <h2>Leadership</h2>
        Looking for a bigger impact? Check out groups who need board members, advisors, mentors and skills based volunteering.
    </div>
    <div class="col-md-3">
        <h2>Grants / Support</h2>
        Need a little help? Scholarships, grants, individual assistance and support organizations.
    </div>
</div>
